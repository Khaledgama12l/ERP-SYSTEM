{
  "name": "erp-system",
  "version": "1.0.2",
  "description": "ERP System Project",
  "author": "Khaled",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "electron": "^34.0.1",
    "electron-builder": "^25.1.8",
    "electron-reload": "^2.0.0-alpha.1",
    "electron-reloader": "^1.2.3"
  },
  "build": {
    "appId": "com.khaled.erp",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "files": [
      "**/*",
      "!dist/*",
      "!node_modules/*"
    ],
    "asar": true
  }
}
